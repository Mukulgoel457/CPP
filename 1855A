#include<bits/stdc++.h>
#define ll long long int
#define pb push_back
using namespace std;

int main(){
    ll t;
    cin>>t;
    while(t--){
        ll n,k=0;
        cin>>n;
        ll a[n];
        for(ll i=0;i<n;i++){
            cin>>a[i];
        }
        for(ll i=0;i<n;i++){
            if(a[i]==i+1){
                k++;
            }
        }
        if(k%2==0){cout<<k/2<<endl;}
        else{cout<<k/2+1<<endl;}
    }
}
