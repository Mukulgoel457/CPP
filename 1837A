#include<bits/stdc++.h>
#define ll long long int
#define pb push_back
using namespace std;

int main(){
    ll t;
    cin>>t;
    while(t--){
        ll x,k;
        cin>>x>>k;
        if(x%k==0){
                cout<<2<<endl;
            cout<<x-1<<" "<<1<<endl;
        }
        else{
            cout<<1<<endl;
            cout<<x<<endl;
        }
    }
}
